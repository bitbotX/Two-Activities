<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@android:color/holo_blue_bright"
        android:layout_marginTop="50dp"
        android:text="@string/main_activity_text_view_description"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_main"
        android:textSize="14sp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/enter_main"
        android:hint="@string/pass_text"
        android:layout_marginStart="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/enter_main"
        android:text="@string/b_text"
        android:id="@+id/b_main"
        android:layout_marginBottom="30dp"
        android:onClick="loadSecondActivity"/>
</RelativeLayout>